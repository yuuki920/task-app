<div class= "main">
  <div class="main-left">
    <%= month_calendar partial:"simple_calendar/calendar" do |data|%>
    <%= data.day %>
    <% end %>
    <%= render partial: ‘days/index’, locals: {days: @days} %>
  </div>
  
  <div class= "main-right">
    <% @note.each do |note|%>
      <div class= "main-right__content">
        <%=link_to safe_join(note.text.split("\n"),tag(:br)),edit_note_path(note.id),class: "main-right__content--text" %>
      </div>
    <% end %>
    <div class= "main-right__new">
      <%= link_to "New work",new_note_path,class: "main-right__new--text" %>
    </div>
  </div>
</div>