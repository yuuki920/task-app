<!DOCTYPE html>
<html>
  <head>
    <title>TaskApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <div class= "header"> 
    <div class ="title" >
      <%= link_to "Mytask", root_path, class: "title__text"%>
    </div>
    <div class= right>
      <% if user_signed_in? %>
        <div class= "right__name">
          <%= current_user.nickname %>
        </div>
        <%= link_to "Log out",destroy_user_session_path, method: :delete, class: "right__btn" %>
      <% else %>
      <%= link_to "Login", new_user_session_path, class: "right__btn" %>
      <%= link_to "sign up", new_user_registration_path, class: "right__btn"%>
      <% end %>
    </div>
  </div>
<%= yield %>
  </body>
</html>
